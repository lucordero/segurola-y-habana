---
import { matchPhotos } from '../../data/matchPhotos.ts';
---

<section id="matches" class="py-12 bg-team-black">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-team-yellow mb-8">Mejores Momentos</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {matchPhotos.map((photo) => (
                    <a href={`/matches/${photo.id}`} class="block group">
                        <div class="bg-gray-900 rounded-lg shadow-xl overflow-hidden transform group-hover:scale-105 transition-transform duration-300 h-full flex flex-col">
                            <img
                                    src={photo.imageUrl}
                                    alt={photo.altText}
                                    class="w-full h-64 object-cover"
                                    loading="lazy"
                            />
                            <div class="p-4 flex-grow">
                                <h3 class="text-lg font-semibold text-team-yellow mb-1">{photo.altText}</h3>
                            </div>
                        </div>
                    </a>
            ))}
        </div>
    </div>
</section>