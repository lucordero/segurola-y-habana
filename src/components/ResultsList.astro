---
// --- How to edit Match Results ---
// To add, remove, or modify matches results, edit the `results` array below.
// Each object in the array represents a matches.
// - `date`: The date of the matches.
// - `opponent`: The opposing team.
// - `score`: The result of the matches (e.g., "2 - 1 Win", "0 - 0 Draw", "1 - 3 Loss").
// - `status`: Can be 'Win', 'Loss', or 'Draw' to apply different styling.

const results = [
    { date: "2025-05-25", opponent: "Real Devoto", score: "3 - 1", status: "Win" },
    { date: "2025-05-18", opponent: "Villa Luro FC", score: "0 - 2", status: "Loss" },
    { date: "2025-05-11", opponent: "Agronomia Central", score: "2 - 2", status: "Draw" },
    { date: "2025-05-04", opponent: "Paternal Juniors", score: "4 - 0", status: "Win" },
];

function getStatusClass(status: string) {
    if (status === 'Win') return 'text-green-400';
    if (status === 'Loss') return 'text-red-400';
    return 'text-gray-400'; // Draw or other
}
---

<section id="results" class="py-12 bg-gray-900">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-team-yellow mb-8">Last Results</h2>
        <div class="bg-team-black rounded-lg shadow-xl p-6 max-w-2xl mx-auto">
            <ul class="space-y-4">
                {results.map(result => (
                        <li class="flex justify-between items-center p-4 bg-gray-800 rounded-md hover:bg-gray-700 transition-colors">
                            <div>
                                <p class="text-sm text-gray-500">{result.date}</p>
                                <p class="text-lg font-semibold text-white">Segurola y Habana vs {result.opponent}</p>
                            </div>
                            <p class={`text-xl font-bold ${getStatusClass(result.status)}`}>{result.score}</p>
                        </li>
                ))}
            </ul>
        </div>
    </div>
</section>