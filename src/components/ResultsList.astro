---
import { results } from '../data/resultList.ts';

function getStatusClass(status: string) {
    if (status === 'Win') return 'text-green-400';
    if (status === 'Loss') return 'text-red-400';
    if( status === 'Proximo') return 'text-yellow-400'; // Upcoming match
    return 'text-gray-400'; // Draw or other
}

