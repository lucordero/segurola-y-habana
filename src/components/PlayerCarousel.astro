---
import PlayerCarouselIsland from '../components/PlayerCarouselIsland.tsx';
import { players } from '../data/players.ts';
---

<section id="players" class="py-12 bg-gray-900">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-team-yellow mb-8">Equipo</h2>

        <!-- Carga e hidrata solo en cliente -->
        <PlayerCarouselIsland client:load players={players} />

        <p class="text-center text-gray-500 mt-4 text-sm">
            Haz scroll horizontal para ver todos los jugadores.
        </p>
    </div>
</section>
