---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PlayerCarousel from '../components/PlayerCarousel.astro';
import MatchPhotos from '../components/MatchPhotos.astro';
import ResultsList from '../components/ResultsList.astro';
import Footer from '../components/Footer.astro';

// A hero section can be added here if desired.
// For now, we go straight to the content.
---

<Layout title="Segurola y Habana FC">
	<Header />
	<main>
		<section class="bg-team-black text-white py-10 text-center">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl md:text-5xl font-bold text-team-yellow mb-4">¡Vamos Segurola y Habana!</h2>
				<p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto">
					Desde la capital de la Cumbia y el Liso, con más pasión que habilidad.
				</p>
			</div>
		</section>
		<PlayerCarousel />
		<MatchPhotos />
		<ResultsList />
	</main>
	<Footer />
</Layout>